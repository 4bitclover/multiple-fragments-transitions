<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:orientation="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="16dp"
    android:background="#89CCF1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C7BCF"
        android:padding="5dp"
        android:text="Water pokemons"
        android:textSize="24sp" />

    <FrameLayout
        android:id="@+id/water_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <Button
            android:id="@+id/blastoise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#2C7BCF"
            android:text="Blastoise"
            android:textSize="14sp" />

        <Button
            android:id="@+id/golduck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#2C7BCF"
            android:text="Golduck"
            android:textSize="14sp" />

        <Button
            android:id="@+id/vaporeon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="#2C7BCF"
            android:text="Vaporeon"
            android:textSize="14sp" />

        <Button
            android:id="@+id/seadra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#2C7BCF"
            android:text="Seadra"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>