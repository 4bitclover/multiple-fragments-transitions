<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="16dp"
    android:background="@color/lightRed"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defaultRed"
        android:padding="5dp"
        android:text="Fire pokemons"
        android:textSize="24sp" />

    <FrameLayout
        android:id="@+id/favourite_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <Button
            android:id="@+id/ninetales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/red_button"
            android:text="Ninetales"
            android:textSize="14sp" />

        <Button
            android:id="@+id/charizard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/red_button"
            android:text="Charizard"
            android:textSize="14sp" />

        <Button
            android:id="@+id/arcanine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/red_button"
            android:text="Arcanine"
            android:textSize="14sp" />

        <Button
            android:id="@+id/rapidash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/red_button"
            android:text="Rapidash"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>