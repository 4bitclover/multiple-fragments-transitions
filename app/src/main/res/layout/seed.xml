<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginBottom="16dp"
    android:background="#CAF5C0"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defaultGreen"
        android:padding="5dp"
        android:text="Seed pokemons"
        android:textSize="24sp" />

    <FrameLayout
        android:id="@+id/common_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingStart="5dp"
        android:paddingEnd="5dp">

        <Button
            android:id="@+id/venusaur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/defaultGreen"
            android:text="Venusaur"
            android:textSize="14sp" />

        <Button
            android:id="@+id/exeggutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/defaultGreen"
            android:text="Exeggutor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/victreebel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/defaultGreen"
            android:text="Victreebel"
            android:textSize="14sp" />

        <Button
            android:id="@+id/vileplume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/defaultGreen"
            android:text="Vileplume"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>